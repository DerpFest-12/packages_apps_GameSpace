<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end">

    <LinearLayout
        android:id="@+id/container_collapsed"
        android:layout_width="@dimen/actions_size"
        android:layout_height="@dimen/actions_size"
        android:layout_gravity="end"
        android:background="@drawable/bar_collapsed"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/action_menu_collapsed"
            android:layout_width="@dimen/actions_size"
            android:layout_height="@dimen/actions_size"
            android:layout_gravity="center"
            android:background="@null"
            android:rotation="-90"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_expanded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@drawable/bar_expanded"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/action_menu_expanded"
            android:layout_width="@dimen/actions_size"
            android:layout_height="@dimen/actions_size"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_arrow" />

        <ImageButton
            android:id="@+id/action_heads_up"
            android:layout_width="@dimen/actions_size"
            android:layout_height="@dimen/actions_size"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_heads_up" />

        <ImageButton
            android:id="@+id/action_screenshot"
            android:layout_width="@dimen/actions_size"
            android:layout_height="@dimen/actions_size"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_screenshot" />

        <ImageButton
            android:id="@+id/action_record"
            android:layout_width="@dimen/actions_size"
            android:layout_height="@dimen/actions_size"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_record" />

    </LinearLayout>

</FrameLayout>
